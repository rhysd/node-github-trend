{
  "name": "github-trend",
  "version": "0.2.2",
  "description": "node.js library for GitHub trending repositories",
  "main": "./build/main.js",
  "author": "rhysd <lin90162@yahoo.co.jp>",
  "scripts": {
    "build": "tsc --pretty -p src/",
    "watch": "tsc --pretty -p src/ --watch",
    "dts": "tsc -p src/ -d --outDir ./",
    "lint": "tslint -p src/",
    "fmt": "prettier --write 'src/**/*.ts'",
    "test": "mocha test/",
    "preversion": "npm run fmt && npm run lint && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rhysd/node-github-trend.git"
  },
  "bugs": {
    "url": "https://github.com/rhysd/node-github-trend/issues"
  },
  "license": "MIT",
  "dependencies": {
    "cheerio": "^0.22.0",
    "gzip-js": "^0.3.2",
    "js-yaml": "^3.10.0",
    "request": "^2.83.0"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.6",
    "@types/js-yaml": "^3.10.1",
    "@types/node": "^9.3.0",
    "@types/request": "^2.0.9",
    "mocha": "^4.1.0",
    "prettier": "^1.9.2",
    "tslint": "^5.8.0",
    "typescript": "~2.6.2"
  }
}
