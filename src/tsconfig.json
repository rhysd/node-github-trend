{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "../build",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": true,
    "strictNullChecks": false,
    "target": "es5",
    "lib": ["es5", "dom", "scripthost", "es2015.promise"],
    "sourceMap": true
  },
  "include": [
    "main.ts"
  ]
}
